<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <!-- Inherit Form View to Modify it -->
        <record id="stock_scrap_add_analytic_id" model="ir.ui.view">
            <field name="name">stock.scrap.add.analytic</field>
            <field name="model">stock.scrap</field>
            <field name="inherit_id" ref="stock.stock_scrap_form_view2"/>
            <field name="arch" type="xml">

                <xpath expr="//div[1]" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="is_analytic"/>
                </xpath>
                <xpath expr="//field[@name='scrap_location_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="analytic_account_id" attrs="{'invisible': [['is_analytic', '=', False]]}"/>
                </xpath>

            </field>
        </record>

        <record id="stock_move_add_analytic_id" model="ir.ui.view">
            <field name="name">stock.move.add.analytic</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="is_analytic" invisible="1"/>
                    <field name="analytic_account_id"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>