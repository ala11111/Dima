<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="stock_report_inherit_id" inherit_id="stock.report_inventory">
            <xpath expr="//table[1]/thead/tr[1]/th[2]" position="after">
                <th class="text-center">Product Image</th>
            </xpath>

            <xpath expr="//table[1]/tbody/t[1]/tr[2]/td[2]" position="replace">
                <td style="vertical-align: top;">
                    <span t-field="line.product_id"/>
                </td>
            </xpath>

            <xpath expr="//table[1]/tbody/t[1]/tr[2]/td[2]" position="after">
                <td class="text-center">
                    <img t-if="line.image_128" t-att-src="image_data_uri(line.image_128)"
                         style="width: 100%"/>
                </td>
            </xpath>

            <xpath expr="//table[1]/tbody/t[1]/tr[2]/td[6]" position="replace">
                <td style="vertical-align: top;">
                    <span t-field="line.available_quantity"/>
                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                </td>

            </xpath>
            <xpath expr="//table[1]/tbody/t[1]/tr[2]/td[7]" position="replace">
                <td style="vertical-align: top;">
                    <span t-field="line.quantity"/>
                    <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                </td>


            </xpath>


        </template>

        <template id="edit_external_layout_striped"
                  inherit_id="web.external_layout_striped">
            <!--                        <xpath expr="//div[contains(@class,'float-left company_address')]" position="replace">-->

            <!--            			</xpath>-->
            <!--                        <xpath expr="//div[contains(@class,'float-left company_address')]" position="attributes">-->
            <!--                            <attribute name="class">d-none</attribute>-->
            <!--                        </xpath>-->

            <xpath expr="//div[contains(@t-attf-class,'o_company_#{company.id}_layout header')]" position="replace">

                <div t-attf-class="o_company_#{company.id}_layout header" t-att-style="report_header_style">
                    <div class="o_background_header">
                        <div class="float-end">
                            <div class="mt0 text-end h3" t-field="company.report_header"/>
                        </div>
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-start"
                             alt="Logo"/>
                        <!--                        <div class="float-start company_address">-->
                        <!--                            <span t-if="company.company_details" t-field="company.company_details"/>-->
                        <!--                        </div>-->
                        <div class="clearfix mb8"/>
                    </div>
                </div>

            </xpath>


            <xpath expr="//div[contains(@class,'clearfix mb8')]" position="after">
                <div class="float-left company_address">
                    <span t-if="company.company_details" t-field="company.company_details"/>
                </div>
            </xpath>
            <xpath expr="//div[contains(@t-attf-class,'o_company_#{company.id}_layout footer o_background_footer')]"
                   position="replace">
                <div t-attf-class="o_company_#{company.id}_layout footer o_background_footer">
                    <div class="row">
                        <!--                        <ul class="list-inline">-->
                        <!--                            <div t-field="company.report_footer"/>-->
                        <!--                        </ul>-->

                        <table class="col-10">
                            <tr>
                                <td>
                                    <b>Phone :</b>
                                    <b>
                                        <span t-field="company.phone"/>
                                    </b>
                                </td>
                                <td>
                                    <b>
                                        <span t-field="company.street"/>
                                    </b>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>
                                        <span t-field="company.email"/>
                                    </b>
                                </td>
                                <td>
                                    <b>
                                        <span t-field="company.street2"/>
                                    </b>
                                </td>
                            </tr>
                        </table>
                        <table class="col-2" style="text-align:center">
                            <tr width="100%">
                                <img src="/edit_current_stock/static/img/qr.jpeg" style="height: 100px;width: 100px;"
                                     alt="qr"/>
                            </tr>

                        </table>

                    </div>
                    <div class="text-center">
                        <div t-if="report_type == 'pdf'" class="text-muted">
                            Page:
                            <span class="page"/>
                            of
                            <span class="topage"/>
                        </div>
                    </div>

                </div>
            </xpath>


        </template>
    </data>
</odoo>