<odoo>
    <data>

        <report
                id="quants_report_custom_action_id"
                model="stock.quant"
                report_type="qweb-pdf"
                string="Quants Report"
                name="edit_current_stock.quants_report_template"
                file="edit_current_stock.quants_report_template"
        />
        <template id="quants_report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col-12">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Image</th>
                                            <th>Available Quantity</th>
                                            <th>Sales Price</th>
                                            <th>Sales Description</th>
                                            <th>Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="docs" t-as="doc">
                                            <tr>
                                                <td>
                                                    <span t-esc="doc.product_id.name"/>
                                                </td>
                                                <td>
                                                    <img t-if="doc.product_id.image_128"
                                                         t-att-src="image_data_uri(doc.product_id.image_128)"
                                                         style="width: 100%"/>
                                                </td>
                                                <td>
                                                    <span t-esc="doc.product_id.name"/>
                                                </td>
                                                <td>
                                                    <span t-esc="doc.product_id.list_price"/>
                                                </td>
                                                <td>
                                                    <span t-esc="doc.product_id.description_sale"/>
                                                </td>
                                                <td>
                                                    <span t-esc="doc.value"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>


    </data>
</odoo>