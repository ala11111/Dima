<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="stock_quant_add_image_id" model="ir.ui.view">
            <field name="name">stock.quant.add.image</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='product_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="image_128" widget="image" class="oe_avatar" height="100"/>
                </xpath>
                <xpath expr="//field[@name='value']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="value_sale"/>
                </xpath>

            </field>
        </record>
        <!-- Inherit Form View to Modify it -->
        <record id="stock_quant_add_stock_image_editable_id" model="ir.ui.view">
            <field name="name">stock.quant.add.image.in.editable</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='product_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="image_128" widget="image" class="oe_avatar" height="100"/>
                </xpath>
                <xpath expr="//field[@name='value']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="value_sale"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>